<Window x:Class="BrainSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator"
        mc:Ignorable="d"
        Title="Brain Simulator II" Height="520.771" Width="756.667" KeyUp="Window_KeyUp" KeyDown="Window_KeyDown" 
        Closing="Window_Closing" Loaded="Window_Loaded" ContentRendered="Window_ContentRendered" WindowState="Maximized" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Grid Margin="0,0,3.4,1.2">
        <DockPanel VerticalAlignment="Top" Margin="0,1,-1.4,0">
            <Menu DockPanel.Dock="Top" x:Name="MainMenu" MouseEnter="MainMenu_MouseEnter" Height="26" Margin="0,0" VerticalAlignment="Top" >
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="button_FileNew_Click"/>
                    <MenuItem Header="_Open" Click="buttonLoad_Click"/>
                    <MenuItem Header="_Save" Click="buttonSave_Click"/>
                    <MenuItem Header="Save _As" Click="buttonSaveAs_Click"/>
                    <Separator />
                    <MenuItem Header="_Properties" Click="MenuItemProperties_Click"/>
                    <Separator />
                    <MenuItem Header="Recent" x:Name="MRUListMenu">
                    </MenuItem>
                    <MenuItem Header="Library">
                        <MenuItem Header="BasicNeurons" Click="buttonLoad_Click"/>
                        <MenuItem Header="CameraTest" Click="buttonLoad_Click"/>
                        <MenuItem Header="SpeechTest" Click="buttonLoad_Click"/>
                        <MenuItem Header="SimVision" Click="buttonLoad_Click"/>
                        <MenuItem Header="Imagination" Click="buttonLoad_Click"/>
                        <MenuItem Header="BabyTalk" Click="buttonLoad_Click"/>
                        <MenuItem Header="Maze" Click="buttonLoad_Click"/>
                        <MenuItem Header="Sallie" Click="buttonLoad_Click"/>
                        <MenuItem Header="3DSim" Click="buttonLoad_Click"/>
                        <MenuItem Header="NeuralGraph" Click="buttonLoad_Click"/>
                        <MenuItem Header="ObjectMotion" Click="buttonLoad_Click"/>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="_Exit" Click="button_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header=" Undo"  Click="MenuItem_Undo" />
                    <Separator />
                    <MenuItem Header=" Cut"  Click="MenuItem_CutNeurons" />
                    <MenuItem Header=" Copy"  Click="MenuItem_CopyNeurons" />
                    <MenuItem Header=" Paste"  Click="MenuItem_PasteNeurons" />
                    <MenuItem Header=" Delete"  Click="MenuItem_DeleteNeurons" />
                    <MenuItem Header=" Move" Click="MenuItem_MoveNeurons" />
                    <MenuItem Header=" Clear Selection" Click="MenuItem_ClearSelection" />
                    <Separator />
                    <MenuItem Header="Load Clipboard" Click="button_LoadClipboard_Click" ToolTip="Load clipboard from file"/>
                    <MenuItem Header="Save Clipboard" Click="button_ClipboardSave_Click" ToolTip="Save clipboard to file"/>
                    <Separator/>
                    <MenuItem Header="_Notes" Click="MenuItemNotes_Click" />
                </MenuItem>
                <MenuItem Header="Neuron Engine" StaysOpenOnClick="True">
                    <MenuItem Header="Reset" Click="ButtonInit_Click"/>
                    <MenuItem Header="Run" Click="PlayPause_Click"/>
                    <MenuItem Header="Pause" Click="PlayPause_Click" />
                    <MenuItem Header="Step" Click="ButtonSingle_Click"/>
                    <StackPanel Orientation="Horizontal" Width="72" >
                        <Label Content="Speed:  " Padding="0,4,0,0"/>
                        <TextBox Text="23" VerticalAlignment="Center" Width="16" x:Name="EngineSpeed" IsEnabled="False"/>
                        <StackPanel>
                            <RepeatButton Content="^" Height="12" Interval="250" VerticalContentAlignment="Bottom" Padding="0,-1" Click="Button_EngineSpeedUpClick"/>
                            <RepeatButton Content="˅" Height="12" Interval="250" VerticalContentAlignment="Top" Padding="-1,-3,0,0" Click="Button_EngineSpeedDnClick"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="100" >
                        <Label Content="Refractory:  " Padding="0,4,0,0"/>
                        <TextBox Text="0" VerticalAlignment="Center" Width="16" x:Name="Refractory" IsEnabled="False"/>
                        <StackPanel>
                            <RepeatButton Content="^" Height="12" Interval="250" VerticalContentAlignment="Bottom" Padding="0,-1" Click="Button_RefractoryUpClick"/>
                            <RepeatButton Content="˅" Height="12" Interval="250" VerticalContentAlignment="Top" Padding="-1,-3,0,0" Click="Button_RefractoryDnClick"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="100" >
                        <Label Content="Threads:  " Padding="0,4,0,0"/>
                        <TextBox Text="-1" VerticalAlignment="Center" Width="37" x:Name="ThreadCount" TextChanged="ThreadCount_TextChanged"/>
                    </StackPanel>
                </MenuItem>
                <MenuItem Header=" Help">
                    <MenuItem Header="Getting Started" Click="MenuItemHelp_Click" />
                    <MenuItem Header="About" Click="Button_HelpAbout_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <local:NeuronArrayView x:Name="theNeuronArrayView" Margin="0,69,-0.4,17.8" ClipToBounds="True" />
        <Slider x:Name="slider" Margin="539,39,0,0" ValueChanged="slider_ValueChanged" IsSnapToTickEnabled="True" Value="5" HorizontalAlignment="Left" Width="140" ToolTip="Change the engine speed" RenderTransformOrigin="1.814,0.625" Height="24" VerticalAlignment="Top"/>
        <Button x:Name="buttonSingle" Margin="474,37,0,0" Click="ButtonSingle_Click" HorizontalAlignment="Left" Width="22" Height="22" VerticalAlignment="Top" ToolTip="Run the engine one cycle">
            <Image x:Name="image" Height="15" Width="18" Source="Resources/Step.png"/>
        </Button>
        <Label x:Name="labelDisplayStatus" Content="Display status" Margin="227,33,0,0" Width="191" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="labelEngineStatus" Content="Initializing" Margin="684,34,-115.4,0" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="buttonInit" HorizontalAlignment="Left" Margin="420,37,0,0" VerticalAlignment="Top" Width="22" Click="ButtonInit_Click" Height="22" ToolTip="Reset all modules">
            <Image x:Name="image1" Height="15" Width="18" Source="Resources/Rewind.png"/>
        </Button>
        <Button x:Name="buttonPlayPause" HorizontalAlignment="Left" Margin="447,37,0,0" VerticalAlignment="Top" Width="22" Height="22" Click="PlayPause_Click" ToolTip="Pause/Continue the neural engine">
            <StackPanel HorizontalAlignment="Center" Height="15" VerticalAlignment="Top" Width="19">
                <Image x:Name="imagePause" Height="15" Width="18" Source="Resources/Pause.png" Margin="2,0"/>
                <Image x:Name="imagePlay" Height="15" Width="18" Source="Resources/Play.png" Visibility="Collapsed"/>
            </StackPanel>
        </Button>
        <Button x:Name="buttonPan" HorizontalAlignment="Left" Height="22" Margin="71,37,0,0" VerticalAlignment="Top" Width="22" Click="ButtonPan_Click" ToolTip="Pan the display with the mouse (Shift+mouse move)">
            <Image x:Name="image2" Height="18" Width="18" Source="Resources/Hand.png"/>
        </Button>
        <Button x:Name="buttonZoomOut" HorizontalAlignment="Left" Height="22" Margin="121,37,0,0" VerticalAlignment="Top" Width="22" ToolTip="Zoom Out (Also mouse wheel" PreviewMouseLeftButtonDown="ButtonZoomOut_PreviewMouseLeftButtonDown">
            <Image x:Name="image4" Height="18" Width="18" Source="Resources/ZoomOut.png"/>
        </Button>
        <Button x:Name="buttonZoomIn" HorizontalAlignment="Left" Height="22" Margin="96,37,0,0" VerticalAlignment="Top" Width="22" ToolTip="Zoom In (Also mouse wheel" PreviewMouseLeftButtonDown="ButtonZoomIn_PreviewMouseLeftButtonDown">
            <Image x:Name="image5" Height="18" Width="18" Source="Resources/ZoomIn.png"/>
        </Button>
        <Label x:Name="label1" Content="Speed:" HorizontalAlignment="Left" Height="30" Margin="497,34,0,0" VerticalAlignment="Top" Width="56"/>
        <CheckBox x:Name="checkBox" Content="Synapses" HorizontalAlignment="Left" Height="21" Margin="150,39,0,0" VerticalAlignment="Top" Width="72" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <ProgressBar x:Name="progressBar" Maximum="1" HorizontalAlignment="Left" Margin="85,0,0,2.8" Width="137" Height="13" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
